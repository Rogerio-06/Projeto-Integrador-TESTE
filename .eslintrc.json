{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:postcss-modules/recommended"
  ],
  "plugins": [
    "postcss-modules"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "postcss-modules/no-undef-class": "error",
    "postcss-modules/no-unused-class": "warn"
  }
}
